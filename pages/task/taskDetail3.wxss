/* pages/task/taskDetail.wxss */

@import '../../assets/iconfont/iconfont.wxss';
page{
  background-color: #f5f5f5;
}

.l1{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding-top: 32rpx;
  padding-bottom: 24rpx;
  width: 100%;
  height: 158rpx;
  position: fixed;
}
.l1 .left{
  width: 60rpx;
  height: 60rpx;
  margin-left: 42rpx;
  margin-top: 6rpx;
}
.l1 .mid{
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}
.l1 .mid .mid-1{
  display: flex;
  flex-direction: row;
}
.l1 .mid .mid-1 .title{
  width: 500rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.l1 .mid .desc{
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #A2A2A2;
}
.l1 .mid .mid-1 .right{
  margin-left: 10rpx;
  padding: 10rpx;
  font-size: 20rpx;
  height: 28rpx;
  border-radius: 10rpx;
}
.l2{
  display: block;
  width: 100%;
  height: 108rpx;
  background-color: #ffffff;
  position: fixed;
  top: 142rpx;
}
.l2 .title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.l2 .title .item{
  width: 250rpx;
  height: 104rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.l3{
  position: absolute;
  top: 254rpx;
  width: 100%;
  height: 100vh-474rpx;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}
.l3 .detail{
  background-color: #ffffff;
  width: 702rpx;
  height: 3084rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}
.h-divider{
  width: 702rpx;
  height: 4rpx;
  margin-top: 40rpx;
  background-color: #F5F5F5;
}
.l3 .detail .p1{
  margin-left: 32rpx;
  margin-top: 48rpx;
}
.l3 .detail .p2{
  margin-left: 32rpx;
  margin-top: 32rpx;
}
.l3 .detail .title2{
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.l3 .detail .title{
  font-size: 28rpx;
  color: #959595;
}
.l3 .detail .value{
  font-size: 32rpx;
  color: #000000;
  margin-top: 10rpx;
}
.l3 .detail .picture{
  width: 160rpx;
  height: 160rpx;
  margin-left: 32rpx;
}
.l3 .detail .image-wrapper{
  display: flex;
  flex-direction: row;
}
.l3 .process{
  background-color: #ffffff;
  width: 702rpx;
  height: 1160rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}

.l3 .avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.l3 .process .cell{
  display: flex;
  flex-direction: row;
  position: relative;
  width: 620rpx;
  left: 50rpx;
}
.l3 .process .cell .left{
  position: relative;
}
.l3 .process .cell .left .avatar-badge{
  width: 32rpx;
  height: 32rpx;
  position: relative;
  left: -20rpx;
  z-index: 10;
}
.l3 .process .cell .left .avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  position: relative;
}

.l3 .process  .bar{
  width: 4rpx;
  height: 72rpx;
  background-color: #07c160;
  position: relative;
  left: 94rpx;
}
.l3 .process  .bar-active{
  width: 4rpx;
  height: 72rpx;
  background-color: #EEB76C;
  position: relative;
  left: 94rpx;
}
.l3 .process .cell .mid{
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
  width: 150rpx;
}
.l3 .process .cell .mid .mid-l2{
  color: #AAAAAA;
}
.l3 .process .cell .right{
  margin-left: 158rpx;
  font-size: 24rpx;
  color: #AAAAAA;
}
.l3 .remark{
  background-color: #ffffff;
  width: 702rpx;
  height: 548rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  margin-bottom: 206rpx;
}
.l3 .remark .remark-l1{
  position: relative;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  border-bottom: #F5F5F5 1px solid;
}
.l3 .remark .remark-l1 .right{
  display: flex;
  flex-direction: row;
}
.l3 .remark .remark-l1 .right .radio{
  padding: 0 20rpx;
}
.l3 .remark .remark-l2 {
  padding: 20rpx 40rpx;
  border-bottom: #F5F5F5 1px solid;
}
.l3 .remark .remark-l3 {
  padding: 20rpx 40rpx;
}
.l3 .remark .remark-l2 .opinion{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.l3 .remark .remark-l2 .opinion .right{
    margin-left: 40rpx;
}
.l3 .remark .remark-l2 .opinion .right .value{
    font-size:14px;
    font-family:PingFangSC-Regular,PingFang SC;
}
.l3 .remark .remark-l2 .opinion .right .info{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 450rpx;
}
.l3 .remark .remark-l2 .opinion .right .info .desc{
    font-size:12px;
    font-family:PingFangSC-Regular,PingFang SC;
    color: #A2A2A2;
}

.indicator{
  width: 48rpx;
  height: 4rpx;
  background-color: #1677FE;
  position: relative;
  left: 100rpx;
  animation-fill-mode: forwards;
  /* 100 350 600*/
}
.active{
  color: #1677FE;
}
.default{
  color: #B6B6B6;
}
.null{
  width: 100%;
  height: 60rpx;
}

