  display: flex;
  flex-direction: column;
}
.l3 .detail{
  background-color: #ffffff;
  width: 702rpx;
  height: 2084rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}
.h-divider{
  width: 702rpx;
  height: 4rpx;
  margin-top: 40rpx;
  background-color: #F5F5F5;
}
.l3 .detail .p1{
  margin-left: 32rpx;
  margin-top: 48rpx;
}
.l3 .detail .p2{
  margin-left: 32rpx;
  margin-top: 32rpx;
}
.l3 .detail .title2{
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.l3 .detail .title{
  font-size: 28rpx;
  color: #959595;
}
.l3 .detail .value{
  font-size: 32rpx;
  color: #000000;
  margin-top: 10rpx;
}
.l3 .detail .picture{
  width: 160rpx;
  height: 160rpx;
  margin-left: 32rpx;
}
.l3 .detail .image-wrapper{
  display: flex;
  flex-direction: row;
}
.l3 .process{
  background-color: #ffffff;
  width: 702rpx;
  height: 1160rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}

.l3 .avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.l3 .process .cell{
  display: flex;
  flex-direction: row;
  position: relative;
  width: 620rpx;
  left: 50rpx;
}
.l3 .process .cell .left{
  position: relative;
}
.l3 .process .cell .left .avatar-badge{
  width: 32rpx;
  height: 32rpx;
  position: relative;
  left: -20rpx;
  z-index: 10;
}
.l3 .process .cell .left .avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  position: relative;
}

.l3 .process  .bar{
  width: 4rpx;
  height: 72rpx;
  background-color: #07c160;
  position: relative;
  left: 94rpx;
}
.l3 .process  .bar-active{
  width: 4rpx;
  height: 72rpx;
  background-color: #EEB76C;
  position: relative;
  left: 94rpx;
}
.l3 .process .cell .mid{
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
  width: 150rpx;
}
.l3 .process .cell .mid .mid-l2{
  color: #AAAAAA;
}
.l3 .process .cell .right{
  margin-left: 158rpx;
  font-size: 24rpx;
  color: #AAAAAA;
}
.l3 .remark{
  background-color: #ffffff;
  width: 702rpx;
  height: 788rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
  border-radius: 5px;
  margin-bottom: 206rpx;
}
.l3 .remark .remark-l1{
  position: relative;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  border-bottom: #F5F5F5 1px solid;
}
.l3 .remark .remark-l1 .right{
  display: flex;
  flex-direction: row;
}
.l3 .remark .remark-l1 .right .radio{
  padding: 0 20rpx;
}
.l3 .remark .remark-l2 {
  padding: 20rpx 40rpx;
  border-bottom: #F5F5F5 1px solid;
}
.l3 .remark .remark-l3 {
  padding: 20rpx 40rpx;
}
.l3 .remark .remark-l2 .opinion{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.l3 .remark .remark-l2 .opinion .input{
  height: 200rpx;
  margin-left: 40rpx;
}

.l4{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 166rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  /* padding: 20rpx 96rpx 22rpx 96rpx; */
  justify-content: center;
  align-items: center;
  z-index: 11;
}
.l4 .button{
  width: 600rpx;
  height: 92rpx;
  background-color: #1677FE;
  border-radius: 10rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.l4 .button-hover{
  background-color: #AAAAAA;
}
.indicator{
  width: 48rpx;
  height: 4rpx;
  background-color: #1677FE;
  position: relative;
  left: 100rpx;
  animation-fill-mode: forwards;
  /* 100 350 600*/
}
.question-images{
  padding-top: 20rpx;
}
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap image{
  width: 100%;
  height: 100%;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover icon{
  position: absolute;
  left:20rpx;
  bottom:12rpx;
  color:#FD5C4C;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.active{
  color: #1677FE;
}
.default{
  color: #B6B6B6;
}
.null{
  width: 100%;
  height: 60rpx;
}

