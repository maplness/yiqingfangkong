}

.l1{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding-top: 32rpx;
  padding-bottom: 24rpx;
  width: 100%;
  height: 158rpx;
  position: fixed;
}
.l1 .left{
  width: 60rpx;
  height: 60rpx;
  margin-left: 42rpx;
  margin-top: 6rpx;
}
.l1 .mid{
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}
.l1 .mid .title{
  font-size: 32rpx;
}
.l1 .mid .desc{
  margin-top: 8rpx;
  font-size: 28rpx;
