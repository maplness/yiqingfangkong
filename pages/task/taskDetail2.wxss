  font-size: 20rpx;
  height: 28rpx;
  border-radius: 10rpx;
}
.l2{
  display: block;
  width: 100%;
  height: 108rpx;
  background-color: #ffffff;
  position: fixed;
  top: 142rpx;
}
.l2 .title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.l2 .title .item{
  width: 250rpx;
  height: 104rpx;
