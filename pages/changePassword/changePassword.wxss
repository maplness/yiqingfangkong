/* pages/changePassword/changePassword.wxss */
.form .line{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}
.form {
  display: flex;
  flex-direction: column;
}
.form .line .input{
  flex: 3;
  padding-left: 40rpx;
}
.form .line .label{
  flex: 1;
  margin-left: 20rpx;
}
.vertical-divider{
  width: 1px;
  height: 40rpx;
  background-color: #E0E3DA;
  margin-top: 4rpx;
}

.btn{
  width: 80%;
  background-color: #55abfc;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}
.btn::after {
  border-radius: 98rpx;
  border: 0; 
}
.divline{
  background: #E0E3DA;
  width: 100%;
  height: 1px;
  margin-top: 10rpx;
}