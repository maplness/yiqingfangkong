/* pages/record/jobdiaryInfo.wxss */
Page{
  background-color: #f7f7f7;
}
.show{
    display:block;
    flex: 1;
}
.hidden{
    display:none;
    flex: 1;
}
.tabContent{
  margin-top: 32rpx;
}
.tabContent .list{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-bottom: 1px solid #F8F8F8;
}
.tabContent .list .list-date{
  font-size: 32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  padding: 20rpx 20rpx 10rpx 20rpx;
}
.tabContent .list .padding{
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.tabContent .list .list-title{
  display: flex;
  flex-direction: row;
}
.tabContent .list .list-title .work-objective{
  width: 550rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #6D6D6D;
}
.tabContent .list .list-title .work-time{
  width: 200rpx;
  text-align: right;
  color: #9A9A9A;
}
.tabContent .l1{
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-bottom: 1px solid #F9F9F9;
}
.tabContent .l1 .l1-input{
  padding-top: 10rpx;
  width: 100%;
}
.tabContent .l2{
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 30rpx;
  border-bottom: 1px solid #F9F9F9;
}
.question-images{
  padding-top: 20rpx;
}
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap image{
  width: 100%;
  height: 100%;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover icon{
  position: absolute;
  left:20rpx;
  bottom:12rpx;
  color:#FD5C4C;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.l3{
  margin: 100rpx;
  
}
.l3 button{
  background-color: #1677FF;
  color: #ffffff;
  font-size: 30rpx;
}

.l-bottom{
  width: 100%;
  height: 150rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0rpx;
}
.l-bottom .title{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.l-bottom .title .item{
  width: 375rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.l-bottom .title .item .tab-i{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.l-bottom .title .item .tab-i image{
  width: 60rpx;
  height: 60rpx;
}
.active{
  color: #1677FE;
}
.default{
  color: #9E9E9E;
}
.noData{
  text-align: center;
  margin-top: 10rpx;
}