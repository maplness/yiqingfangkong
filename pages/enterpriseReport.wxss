/* pages/enterpriseReport.wxss */
@import './report/generalReport.wxss';
@import '../assets/iconfont/iconfont.wxss';
page{
  background-color: #F7F7F7;
  margin-top: 32rpx;
}
.form-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #F8F8F8;
  background-color: #fff;
  padding: 40rpx;
}
.legalInfo{
  color: #AFBEED;
  font-size: 25rpx;
  margin-left: 30rpx;
}
.flex-item{
  margin-left: 40rpx;
  margin-top: 10rpx;
}
.flex-item2{
  margin-left: 40rpx;
  margin-top: 10rpx;
  padding: 10rpx;
  width: 450rpx;
  background-color: rgb(240, 240, 240);
  border: 1px solid rgb(226, 225, 225);
  border-radius: 6rpx;
}
.input-box{
  width: 600rpx;
  height: 260rpx;
  margin-left: 40rpx;
  padding: 20rpx;
  background-color: rgb(240, 240, 240);
  border: 1px solid rgb(226, 225, 225);
  border-radius: 6rpx;
  margin-bottom: 20rpx;
}
.input-box2{
  width: 620rpx;
  height: 60rpx;
  margin-left: 40rpx;
  padding: 10rpx;
  background-color: rgb(240, 240, 240);
  border: 1px solid rgb(226, 225, 225);
  border-radius: 6rpx;
  margin-bottom: 20rpx;
}
.label{
  /* margin-left: 7%; */
  margin-top: 10rpx;
  font-size: 30rpx;
  width: 240rpx;
}
.label2{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 120rpx;
}
.divider{
  width: 90%;
  height: 1px;
  background-color: rgb(219, 219, 219);
  margin-left: 5%;
}
.divider2{
  width: 100%;
  height: 1px;
  background-color: rgb(219, 219, 219);
  /* margin-left: 5%; */
}
.label3{
  color: rgb(177, 177, 177);
  margin-left: 40rpx;
}
.hint{
  color: red;
  font-size: 14px;
  position: absolute;
  top: 240rpx;

}
.microphone{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 240rpx;
  right: 40rpx;
}
.location-icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
}
.add{
  width: 140rpx;
  height: 140rpx;
  margin-left: 40rpx;
}
.buttons{
  display: flex;
  flex-direction: row;
}
.submit{
  background-color: red;
  color: #ffffff;
}
.display_block{
  display: block;
}
.submitButton{
  margin-top: 20rpx;
  text-align: center;
}

.submitButton button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.submitButton .submit{
  margin-right: 20rpx;
  background-color: #55abfc;
  color: #ffffff;
}
.submitButton .cancel{
  margin-left: 20rpx;
  border: 1rpx solid #000000;
  background-color: #ffffff;
  color: #000000;
}