/* pages/gridOperator/gridOperator.wxss */
@import './generalReport.wxss';
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #F7F7F7;
}

.page-body {
  padding: 20rpx 0;
    border: 1px solid #F8F8F8;

}
.display_block{
  display: block;
}

.form-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #F8F8F8;
  background-color: #fff;
  padding: 40rpx;
}
.form-item-name{
  flex: 1
}
.form-item-input{
  flex: 2
}
.display_block{
  display: block;
}

.form-item-location{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
}

.form-item-location-icon{
  width: 40rpx;
}
.form-item-location-input{
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.form-item-location-click{
  width: 200rpx;
  color: #55abfc;
  text-align: right;
}
.map-cell{
  display: flex;
  flex-direction: column;
}
.map-cell .l2{
  display: flex;
  flex-direction: row;
}
.map-cell .l2 .p-icon{
  width: 50rpx;
  height: 50rpx;
}
.map-cell .l2 .p{
  width: 580rpx;
}
.map-cell .l2 .tail{
  font-size: 26rpx;
  color: #006BFF;
}
.form-item-btn{
  width: 200rpx;
  border: 1px solid #c9c9c9;
  display: inline-block;
  text-align: center;
  line-height: 35rpx;
  border-radius: 10rpx;
}
.ml-1{
  margin-left:calc(50% - 220rpx);
  margin-right: 40rpx;
  background: #55abfc;
}
.form-item-submit{
  background-color: #55abfc;
  color: #fff;
}
.picRecord{
  height: 160rpx;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap image{
  width: 100%;
  height: 100%;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  /* background: #2e82ff; */
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover icon{
  position: absolute;
  left:20rpx;
  bottom:12rpx;
  color:#FD5C4C;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 2px dotted #000000;
  border-radius: 10rpx;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.submitButton{
  margin-top: 20rpx;
  text-align: center;
}

.submitButton button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.submitButton .submit{
  margin-right: 20rpx;
  background-color: #55abfc;
  color: #fff;
}
.submitButton .cancel{
  margin-left: 20rpx;
  border: 1rpx solid #000000;
  background-color: #fff;
  color: #000000;
}