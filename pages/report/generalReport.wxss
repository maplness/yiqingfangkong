/* pages/general/generalSign.wxss */
@import '../../assets/iconfont/iconfont.wxss';
page{
  background-color: #F5F5F5;
  /* margin-top: 32rpx; */
}
.top{
  height: 24rpx;
}
.form-item{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #F5F5F5;
  background-color: #fff;
  padding: 24rpx 32rpx;
}
.form-item-row{
  display: flex;
  flex-direction: row;
}
.form-item-preleft{
  flex: 5;
}
.form-item-preright{
  background-color: #fff;
  border-bottom: 1px solid #F5F5F5;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: right;
  align-items: center;
  font-weight: bold;
  color: #1677FF;
  padding-right: 32rpx;
}
.form-item-name{
  font-size: 32rpx;
}
.form-item-input{
  font-size: 28rpx;
  padding: 20rpx 0;
}

.form-item-location{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.form-item-location-icon{
  width: 40rpx;
}
.form-item-location-loc{
  margin-top: 10rpx;
}
.form-item-location-input{
  width: 500rpx;
}
.form-item-location-click{
  width: 200rpx;
  color: #1677FF;
  text-align: right;
}
.form-bottom{
  margin-bottom: 58rpx;
}
.display_block{
  display: block;
}
