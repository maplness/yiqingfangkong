/* pages/general/generalSign.wxss */
@import '../../iconfont/iconfont.wxss';
.weui-label{
  padding-right: 15px;
  font-size: 14px;
}
.weui-input{
  background-color: #efefef;
  height: 2em;
  min-height: 2em;
  line-height: 2em;
  border-radius: 5px;
  padding: 10rpx;
}
.display_block{
  display: block;
}
.textarea_p{
  width: 650rpx;
  background-color: #efefef;
  border-radius: 5px;
  margin-top: 5px;
  padding: 20rpx;
}
.margin-top-5{
  margin-top: 5px;
}
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #000000;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap image{
  width: 100%;
  height: 100%;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #2e82ff;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover icon{
  position: absolute;
  left:12rpx;
  bottom:12rpx;
  color:#fff;
}
 
.uploadImgBtn{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 140rpx;
  border: 2rpx solid #000000;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}

.submitButton{
  margin-top: 20rpx;
  text-align: center;
}

.submitButton button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.submitButton .submit{
  margin-right: 20rpx;
  background-color: #ff0000;
  color: white;
}
.submitButton .cancel{
  margin-left: 20rpx;
  border: 1rpx solid #000000;
  background-color: white;
  color: #000000;
}
.picRecord::after{
  clear: both;
}
.picRecord{
  display: flex;
  padding: 10px 0; 
}