.q-image-wrap{
  float: left;
  width: 180rpx;
  position: relative;
  overflow: hidden;
}
.q-image-wrap .q-image{
  width: 140rpx;
  height: 140rpx;
  margin-top: 26rpx;
}
.q-image-remover{
  width:40rpx;
  height: 40rpx;
  border-radius: 100%;
  position: absolute;
  top:10rpx;
  right:16rpx;
}
.uploadImgBtn{
  width: 140rpx;
  height: 140rpx;
  margin-top: 26rpx;
  background-color: #F5F5F5;
  float: left;
}
.submitButton{
  /* margin-top: 20rpx;
  text-align: center; */
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 216rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.submitButton .submit{
  width: 686rpx;
  height: 108rpx;
  line-height: 108rpx;
  font-size: 32rpx;
  color: #ffffff;
  font-family: PingFangSC-Medium;
  background-color:  #1677FE;
  border-radius: 14rpx;
}